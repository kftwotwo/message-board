{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="comment">Comment</label>
        {{input value=content id="comment"}}
      </div>
      <button {{action 'saveComment'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
